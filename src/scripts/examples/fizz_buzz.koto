# Fizz buzz in Koto

fizz_buzz = |n|
  match n % 3, n % 5
    0, 0 then "Fizz Buzz"
    0, _ then "Fizz"
    _, 0 then "Buzz"
    else n

play.setup = ||
  play.state =
    update_time: 0
    n: 0

play.update = |time|
  state = play.state
  if time >= state.update_time
    print fizz_buzz (state.n += 1)
    state.update_time = time + 0.2
