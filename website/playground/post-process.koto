# Replaces the placeholder in index.html with the contents of the main site's header.html

from io import extend_path, read_to_string

source_dir, staging_dir = koto.args

index_path = '$staging_dir/index.html'

index = read_to_string index_path
header = read_to_string '$source_dir/../templates/header.html'

output = index.replace '<!-- header-placeholder -->', header

# Replace index.html
(io.create index_path).write output
